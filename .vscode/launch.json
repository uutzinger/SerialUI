{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
        "justMyCode": false,
        "subProcess": true,
        "debugOptions": [
          // "WaitOnAbnormalExit",
          // "WaitOnNormalExit",
          "RedirectOutput"
        ]
      }
    ]
  }
  